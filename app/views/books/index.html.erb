<p id="notice"><%= notice %></p>

<h1 class="display-4">Books</h1>

<table class="table t-width">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Publisher</th>
      <th scope="col">Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th scope="row"><%= book.name %></th>
        <td><%= book.publisher %></td>
        <td><%= book.author.name %></td>
        <td><%= link_to 'Show', book, :class => 'btn btn-dark'  %></td>
        <td><%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-outline-dark' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' },
          :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, :class => 'btn btn-dark btn-lg btn-block t-width'  %>
