<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class="table t-width">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <th scope="row"><%= author.name %></th>
        <td><%= author.age %></td>
        <td><%= author.nationality %></td>
        <td><%= link_to 'Show', author, :class => 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_author_path(author), :class => 'btn btn-outline-dark' %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' },
          :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, :class => 'btn btn-dark btn-lg btn-block t-width' %>
